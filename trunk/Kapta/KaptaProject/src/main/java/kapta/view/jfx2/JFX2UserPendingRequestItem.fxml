<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="100.0" prefWidth="540.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kapta.control.guicontroller.interfacetwo.JFX2UserPendingRequestGUIController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="540.0" style="-fx-background-color: #ff9105; -fx-background-radius: 0;">
         <children>
            <ImageView fx:id="eventPic" fitHeight="70.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="labelEventName" alignment="CENTER" prefHeight="60.0" prefWidth="175.0" text="Nome Evento" textFill="#200f54">
               <font>
                  <Font name="Arial Bold" size="21.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="97.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="Date:" textFill="#200f54">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="labelEventDate" text="data" textFill="#e8e7fc">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font></Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="Price:" textFill="#200f54">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="labelEventPrice" text="price" textFill="#e8e7fc">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font></Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <Button mnemonicParsing="false" onAction="#infoPendingEvent" prefHeight="51.0" prefWidth="57.0" style="-fx-background-color: #200f54; -fx-background-radius: 1000;" text="Info" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow height="30.0" radius="14.5" spread="0.3" width="30.0" />
               </effect>
            </Button>
            <Button mnemonicParsing="false" onAction="#cancelRequest" prefHeight="52.0" prefWidth="58.0" style="-fx-background-color: #200f54; -fx-background-radius: 1000;" text="x" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow height="30.0" radius="14.5" spread="0.3" width="30.0" />
               </effect>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
