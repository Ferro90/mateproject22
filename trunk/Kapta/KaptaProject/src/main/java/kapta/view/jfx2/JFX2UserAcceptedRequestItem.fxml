<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="100.0" prefWidth="540.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kapta.control.guicontroller.interfacetwo.JFX2UserAcceptedRequestItemGUIController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="540.0" style="-fx-background-color: #54e589; -fx-background-radius: 0;">
         <children>
            <ImageView fx:id="eventPic" fitHeight="70.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="labelEventName" alignment="CENTER" prefHeight="61.0" prefWidth="174.0" text="Nome Evento" textFill="#200f54">
               <font>
                  <Font name="Arial Bold" size="21.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="116.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="Date:" textFill="#200f54">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label fx:id="labelEventDate" text="data" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="Price:" textFill="#200f54">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label fx:id="labelEventPrice" text="price" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <Button mnemonicParsing="false" onAction="#infoEvent" prefHeight="77.0" prefWidth="77.0" style="-fx-background-color: #200f54; -fx-background-radius: 1000;" text="Info" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="23.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
